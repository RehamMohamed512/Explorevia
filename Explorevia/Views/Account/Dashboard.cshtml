@model Explorevia.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<h1 class="my-4">Admin Dashboard</h1>

<!-- Pending Requests -->
<h3>Pending Hotel Requests</h3>
<table class="table table-bordered table-hover mb-5">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Hotel Name</th>
            <th>Owner</th>
            <th>Email</th>
            <th>City</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PendingRequests.Any())
        {
            int i = 1;
            foreach (var req in Model.PendingRequests)
            {
                <tr>
                    <td>@i</td>
                    <td>@req.HotelName</td>
                    <td>@req.OwnerName</td>
                    <td>@req.Email</td>
                    <td>@req.City</td>
                    <td>
                        <form method="post" asp-action="Approve" asp-route-id="@req.Id" style="display:inline">
                            <button class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form method="post" asp-action="Reject" asp-route-id="@req.Id" style="display:inline">
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No pending requests</td>
            </tr>
        }
    </tbody>
</table>

<!-- Existing Hotels -->
<h3>Hotels List</h3>
<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Hotels.Any())
        {
            int j = 1;
            foreach (var hotel in Model.Hotels)
            {
                <tr>
                    <td>@j</td>
                    <td>@hotel.Name</td>
                    <td>@hotel.Address</td>
                    <td>
                        <form method="post" asp-action="DeleteHotel" asp-route-id="@hotel.Id" style="display:inline">
                            <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</button>
                        </form>
                    </td>
                </tr>
                j++;
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No hotels found</td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(function () {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "4000"
        };

        var type = '@TempData["NotificationType"]';
        var message = '@TempData["NotificationMessage"]';

        if (type && message) {
            switch (type.toLowerCase()) {
                case "success":
                    toastr.success(message);
                    break;
                case "danger":
                    toastr.error(message);
                    break;
                default:
                    toastr.info(message);
                    break;
            }
        }
    });
</script>
