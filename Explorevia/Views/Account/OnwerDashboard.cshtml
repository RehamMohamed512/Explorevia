<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: url('/images/pppp.jpg') no-repeat center center;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .dashboard-header {
        background-color: #003459;
        padding: 20px;
        border-radius: 15px;
        color: #fffcf0;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .card-box {
        background-color: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border-top: 8px solid #003459;
    }

    .btn-main {
        background-color: #003459;
        color: #fffcf0;
        border-radius: 10px;
        padding: 12px;
        font-weight: 600;
    }

        .btn-main:hover {
            background-color: #00253d;
            color: #fffcf0;
        }

    label {
        color: #003459;
        font-weight: 600;
    }
</style>

<div class="container mt-4">

    <!-- Header -->
    <div class="dashboard-header">
        <h2>Hotel Owner Dashboard</h2>
        <p>Manage your hotel, update details & upload images</p>
    </div>

    <!-- Form Card -->
    <div class="card-box">

        <h4 class="mb-4">Add / Edit Your Hotel</h4>

        <form method="post" enctype="multipart/form-data" asp-action="SaveHotel" asp-controller="Hotels">

            <div class="mb-3">
                <label>Hotel Name</label>
                <input type="text" name="HotelName" class="form-control" placeholder="Enter hotel name" required>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label>Price Per Night</label>
                    <input type="number" name="Price" class="form-control" placeholder="e.g. 1500" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label>Rating</label>
                    <select name="Rating" class="form-control" required>
                        <option value="">Select Rating</option>
                        <option>1 Star</option>
                        <option>2 Stars</option>
                        <option>3 Stars</option>
                        <option>4 Stars</option>
                        <option>5 Stars</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label>Description</label>
                <textarea name="Description" class="form-control" rows="4" placeholder="Write a short description about your hotel"></textarea>
            </div>

            <div class="mb-3">
                <label>Hotel Images</label>
                <input type="file" name="Images" class="form-control" multiple accept="image/*">
                <small class="text-muted">You can upload up to 5 images</small>
            </div>

            <button class="btn btn-main w-100 mt-3">Save Hotel</button>
        </form>

    </div>

</div>
