<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotels</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body class="bg-background text-foreground">
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Filters Sidebar -->
            <div class="lg:col-span-1">
                <div class="border-border sticky top-4 bg-card rounded-lg shadow-lg p-4 space-y-6">
                    <h2 class="text-lg font-semibold mb-2">Filters</h2>
                    <!-- Location Filter -->
                    <div>
                        <h3 class="font-semibold mb-2">Location</h3>
                        <select id="locationFilter" class="w-full px-3 py-2 border rounded-lg">
                            <option value="All">All</option>
                            <option value="Cairo">Cairo</option>
                            <option value="Hurghada">Hurghada</option>
                            <option value="Luxor">Luxor</option>
                        </select>
                    </div>
                    <!-- Price Range Filter -->
                    <div>
                        <h3 class="font-semibold mb-2">Price Range</h3>
                        <input type="number" id="minPrice" placeholder="Min" class="w-1/2 px-2 py-1 border rounded-lg" />
                        <input type="number" id="maxPrice" placeholder="Max" class="w-1/2 px-2 py-1 border rounded-lg" />
                    </div>
                    <!-- Minimum Rating -->
                    <div>
                        <h3 class="font-semibold mb-2">Minimum Rating</h3>
                        <select id="minRating" class="w-full px-3 py-2 border rounded-lg">
                            <option value="0">All Ratings</option>
                            <option value="3">3+ Stars</option>
                            <option value="3.5">3.5+ Stars</option>
                            <option value="4">4+ Stars</option>
                            <option value="4.5">4.5+ Stars</option>
                        </select>
                    </div>
                    <button onclick="applyFilters()" class="w-full mt-4 bg-accent text-white py-2 rounded-lg font-semibold">Apply Filters</button>
                </div>
            </div>
            <!-- Hotels Grid -->
            <div class="lg:col-span-3">
                <div class="mb-4 text-sm text-muted-foreground" id="hotelCount"></div>
                <div id="hotelsGrid" class="grid grid-cols-1 md:grid-cols-2 gap-6"></div>
            </div>
        </div>
    </div>
    <script>
        const hotels = [
          {
            name: "Nile Luxury Palace",
            location: "Cairo",
            price: 450,
            rating: 4.8,
            reviews: 120,
            description: "Luxury hotel with Nile view",
            image: "https://via.placeholder.com/400x200"
          },
          {
            name: "Red Sea Oasis Resort",
            location: "Hurghada",
            price: 350,
            rating: 4.7,
            reviews: 95,
            description: "Relaxing resort by the Red Sea",
            image: "https://via.placeholder.com/400x200"
          },
          {
            name: "Luxor Heritage Hotel",
            location: "Luxor",
            price: 320,
            rating: 4.9,
            reviews: 110,
            description: "Experience historic Luxor in style",
            image: "https://via.placeholder.com/400x200"
          }
        ];

        const hotelsGrid = document.getElementById('hotelsGrid');
        const hotelCount = document.getElementById('hotelCount');

        function displayHotels(list) {
          hotelsGrid.innerHTML = '';
          hotelCount.textContent = `Showing ${list.length} hotel${list.length !== 1 ? 's' : ''}`;
          if (list.length === 0) {
            hotelsGrid.innerHTML = `<div class="border p-12 text-center text-muted-foreground rounded-lg">No hotels found matching your criteria.</div>`;
            return;
          }

          list.forEach(hotel => {
            const div = document.createElement('div');
            div.className = 'border-border bg-card rounded-lg shadow-lg overflow-hidden';
            div.innerHTML = `
              <img src="${hotel.image}" class="w-full h-48 object-cover" alt="${hotel.name}" />
              <div class="p-4">
                <h2 class="text-lg font-bold">${hotel.name}</h2>
                <p class="text-muted-foreground">${hotel.location}</p>
                <p class="mt-2">${hotel.description}</p>
                <p class="mt-2 font-semibold">Price: $${hotel.price} / night</p>
                <p class="mt-1 text-muted-foreground">Rating: ${hotel.rating} ⭐ (${hotel.reviews} reviews)</p>
              </div>
            `;
            hotelsGrid.appendChild(div);
          });
        }

        function applyFilters() {
          const location = document.getElementById('locationFilter').value;
          const minPrice = parseInt(document.getElementById('minPrice').value) || 0;
          const maxPrice = parseInt(document.getElementById('maxPrice').value) || 10000;
          const minRating = parseFloat(document.getElementById('minRating').value);

          const filtered = hotels.filter(h =>
            (location === 'All' || h.location === location) &&
            h.price >= minPrice &&
            h.price <= maxPrice &&
            h.rating >= minRating
          );

          displayHotels(filtered);
        }

        // Initial display
        displayHotels(hotels);
    </script>

</body>
</html>
