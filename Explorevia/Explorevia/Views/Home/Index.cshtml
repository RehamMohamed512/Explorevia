@* Views/Home/Index.cshtml *@
@model IEnumerable<dynamic>


<div class="row">
    <aside class="col-lg-3 mb-4">
        <div class="card p-3">
            <h6>Filters</h6>
            <form method="get" action="/Home/Index">
                <div class="mb-2">
                    <label>Country</label>
                    <select name="governorate" class="form-select">
                        <option value="">Countries</option>
                        <option>Cairo</option>
                        <option>Alex</option>
                        <option>Giza</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label>Price per night</label>
                    <input name="minPrice" class="form-control mb-1" placeholder="from" />
                    <input name="maxPrice" class="form-control" placeholder="to" />
                </div>
                <button class="btn btn-primary mt-2" type="submit">Submit</button>
            </form>
        </div>


        <div class="mt-3">
            <h6>About</h6>
            <p>ExploreVia .</p>
        </div>
    </aside>


    <section class="col-lg-9">
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-md-6">
                    @@Html.Partial("_HotelCard", hotel)
                </div>
            }
        </div>
    </section>
</div>
