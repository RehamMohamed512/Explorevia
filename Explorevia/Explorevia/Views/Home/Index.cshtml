.collage {
  position: relative;
  width: 100%;
  height: 950px;
  margin: 0 auto;
  background-color: #fffcf0;

  overflow: hidden;
}

/* GENERAL IMAGE STYLE */
.img {
  position: absolute;
  width: 200px;          /* reduced for less space */
  border-radius: 8px;
  transition: transform .4s ease;
}

.img:hover {
  transform: scale(1.1);
}

/* PYRAMIDS - always top layer */
.main-pyramids {
  width: 400px;

  top: 250px;
  left: 35%;
  transform: scale(0.9);
  z-index: 30;
}

/* LEFT SIDE */
.dahab {
  top: 40px;
  left: 2%;
  transform: rotate(-3deg);
}

.siwa {
  bottom: 120px;
  left: 4%;
  transform: rotate(-2deg);
}

/* CENTER-LEFT */
.luxor {
  top: 20px;
  right: 38%;
  width: 300px;
  height:180px
  transform: rotate(3deg);
}

/* SWAP POSITIONS */

/* SAFARI takes old Khan location */
.safari {
  bottom: 200px;
  right: 20%;
  transform: rotate(4deg);
}

/* KHAN takes old Safari location */
.khan {
  bottom: 220px;
  right: 5%;
  transform: rotate(-2deg);
}

/* TOP RIGHT */
.aswan {
    bottom: 230px;
  left: 19%;
  height:17%;
  width:16%;
  transform: rotate(3deg);
  z-index: 5;    /* behind top layers */
}

.cairo {
  top: 150px;
  right: 20%;
  transform: rotate(-2deg);
}

/* SWAP Tunis <-> Diving */

/* Diving moved to the left-mid */
.diving {
  top: 200px;
  right: 3%;
  transform: scale(1.05);
}

/* Tunis now on right */
.tounes {
   top: 300px;
  left: 5%;
  transform: rotate(-3deg);
}

/* RIGHT SIDE */
.sharm {
  top: 40px;
  right: 3%;
}

/* MUSEUM bottom center */
