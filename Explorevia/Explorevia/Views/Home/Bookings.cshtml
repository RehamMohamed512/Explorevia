@* @model Explorevia.Models.Hotel *@

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    .hotel-image {
        height: 380px;
        width: 100%;
        object-fit: cover;
        border-radius: 12px;
    }

    .rating-star {
        color: #f4c150;
        font-size: 22px;
    }

    .amenity-dot {
        width: 8px;
        height: 8px;
        background: #d4af37;
        border-radius: 50%;
        display: inline-block;
        margin-right: 8px;
    }

    .price-box {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
    }
</style>

<div class="container py-5">

    <!-- Back -->
    <a href="/Home/Explore" class="btn btn-outline-secondary mb-3">← Back to Hotels</a>

    <!-- Title -->
    <h1 class="fw-bold">Hotels in egypt</h1>
    <p class="text-muted">cairo</p>

    <div class="row mt-4">

        <!-- LEFT SIDE -->
        <div class="col-lg-8">

            <!-- Image -->
            <img src="~/images/banner.jpg" class="hotel-image mb-4" />

            <!-- Rating -->
            <div class="card mb-4">
                <div class="card-body d-flex align-items-center gap-3">
                    <h2 class="fw-bold text-warning">4</h2>
                    <div>
                        
                   
                           
                                <span class="rating-star">★</span>
                            
                                <span class="text-muted rating-star">★</span>
                            
                        
                        <p class="text-muted">reviews</p>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="card mb-4">
                <div class="card-header fw-bold">About</div>
                <div class="card-body">
                    <p class="text-muted">best hotel</p>
                </div>
            </div>

            <!-- Amenities -->
            <div class="card mb-4">
                <div class="card-header fw-bold">Amenities</div>
                <div class="card-body">
                    <div class="row">
                        
                            <div class="col-6 col-md-4 mb-2">
                                <span class="amenity-dot"></span> 
                            </div>
                       
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header fw-bold">Contact Information</div>
                <div class="card-body">

                    <p class="text-muted mb-1">Address</p>
                    <p>Cairo</p>

                    <p class="text-muted mb-1">Phone</p>
                    <p>0100</p>

                    <p class="text-muted mb-1">Email</p>
                    <p>myemail@me.com</p>

                    <div class="row mt-3">
                        <div class="col">
                            <p class="text-muted mb-1">Check-in</p>
                            <p>2025/5/5</p>
                        </div>
                        <div class="col">
                            <p class="text-muted mb-1">Check-out</p>
                            <p>2025/6/6</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        <!-- RIGHT (Booking Sidebar) -->
        <div class="col-lg-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header fw-bold">Book Your Stay</div>
                <div class="card-body">

                    <form method="post" action="">

                        <div class="mb-3">
                            <label class="form-label">Check-in Date</label>
                            <input type="date" name="CheckIn" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Check-out Date</label>
                            <input type="date" name="CheckOut" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Guests</label>
                            <input type="number" name="Guests" class="form-control" min="1" value="1" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rooms</label>
                            <input type="number" name="Rooms" class="form-control" min="1" value="1" />
                        </div>

                        <!-- Price Info -->
                        <div class="price-box mb-3">
                            <p class="mb-1">Price per night: <b>100</b></p>
                            <p class="text-muted small">(Total will be calculated on confirmation page)</p>
                        </div>

                        <input type="hidden" name="HotelId" value="1" />

                        <button class="btn btn-warning w-100 mt-3">Continue</button>

                    </form>

                </div>
            </div>
        </div>

    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
