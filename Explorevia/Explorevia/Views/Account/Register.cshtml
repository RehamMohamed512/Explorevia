@model Explorevia.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ExploreVia | Register</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
        body {
            background: url('/images/bg5.webp') no-repeat center center;
            background-size: cover;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-card {
            width: 400px;
            background: rgba(255, 252, 240, 0.7);
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 0 20px #003459;
            border: 1px solid #003459;
        }

        .brand img {
            width: 195px;
            height: 95px;
            border: 3px solid #003459;
            box-shadow: 0 0 15px #003459;
            display: block;
            margin: 0 auto 15px;
        }

        .register-title {
            text-align: center;
            font-size: 28px;
            color: #003459;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .form-control {
            background: rgba(255, 252, 240);
            border: 2px solid #444;
            color: #003459;
        }

            .form-control:focus {
                border-color: #003459;
                box-shadow: 0 0 5px #003459;
                background: rgba(255, 252, 240);
                color: #003459;
            }

        label {
            color: #003459;
            font-weight: 600;
        }

        .btn-gold {
            background: #003459;
            color: rgba(255, 252, 240);
            font-weight: bold;
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            transition: 0.3s;
        }

            .btn-gold:hover {
                box-shadow: 0 0 15px #003459;
            }

        .footer-text {
            text-align: center;
            margin-top: 20px;
            color: #555;
        }

            .footer-text a {
                color: #003459;
                font-weight: 600;
            }
    </style>
</head>

<body>

    <div class="register-card">

        <div class="brand">
            <img src="/images/ex-photo.png" alt="logo" />
        </div>

        <h3 class="register-title">ExploreVia Register</h3>

        @* @if (TempData["NotificationMessage"] != null)
        {
            <div class="alert alert-@TempData["NotificationType"]">
                @TempData["NotificationMessage"]
            </div>
        } *@

        <form asp-action="RegisterUser" method="post" novalidate>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-gold mt-3">Register</button>

            <div class="footer-text">
                Already have an account? <a href="/Account/Login">Login</a>
            </div>
        </form>
    </div>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
