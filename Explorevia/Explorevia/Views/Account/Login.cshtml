@model Explorevia.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ExploreVia | Login</title>

    <style>
        body {
            background: url('/images/bg2.webp') no-repeat center center;
            background-size: cover;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 400px;
            background: rgba(255, 252, 240, 0.75);
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 0 20px #003459;
            border: 1px solid #003459;
        }

        .brand img {
            width: 195px;
            height: 95px;
            border: 3px solid #003459;
            box-shadow: 0 0 15px #003459;
            display: block;
            margin: 0 auto 15px;
        }

        .login-title {
            text-align: center;
            font-size: 28px;
            color: #003459;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .form-control {
            background: rgba(255, 252, 240, 0.7);
            border: 2px solid #444;
            color: #003459;
        }

            .form-control:focus {
                border-color: #003459;
                box-shadow: 0 0 5px #003459;
                background: rgba(255, 252, 240, 0.9);
                color: #003459;
            }

        label {
            color: #003459;
            font-weight: 600;
        }

        .btn-login {
            background: #003459;
            color: rgba(255, 252, 240);
            font-weight: bold;
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            transition: 0.3s;
            margin-top: 10px;
        }

            .btn-login:hover {
                background: #00263a;
                box-shadow: 0 0 15px #003459;
            }

        .footer-text {
            text-align: center;
            margin-top: 15px;
            color: #4a4a4a;
        }

            .footer-text a {
                color: #003459;
                font-weight: 600;
            }
    </style>

</head>

<body>

    <div class="login-card">
        <div class="brand">
            <img src="/images/ex-photo.png" alt="logo" />
        </div>

        <h3 class="login-title">ExploreVia Login</h3>

        <form method="post">
            <div class="form-group">
                <label>Email Address</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Login</button>

            <div class="footer-text">
                Donâ€™t have an account?
                <a href="/Account/RegisterUser">Create One</a>
            </div>

            <div class="footer-text">
                Are you a hotel owner?
                <a href="/Account/RegisterHotel">Register Here</a>
            </div>

        </form>
    </div>

</body>
</html>
