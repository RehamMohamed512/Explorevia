@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ExploreVia | Login</title>

    <link rel="stylesheet" href="/" />

    <style>
        body {
            /* Full-page background image */
            background: url('/images/bg2.webp') no-repeat center center;
            background-size: cover;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 400px;
            background: rgba(255, 252, 240, 0.7); /* slightly transparent black */
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 0 20px #003459;
            color: #fff;
            border: 1px solid #003459;
        }

        .brand img {
            width: 195px;
            height: 95px;
            border: 3px solid #003459;
            box-shadow: 0 0 15px #003459;
            display: block;
            margin: 0 auto 15px;
        }

        .login-title {
            text-align: center;
            font-size: 28px;
            color: #003459;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .form-control {
            background: rgba(255, 252, 240, 0.7);
            border: 2px solid #444;
            color: #fff;
        }

            .form-control:focus {
                border-color: #003459;
                box-shadow: 0 0 5px #003459;
                background: rgba(255, 252, 240, 0.7);
                color: #fff;
            }

        label {
            color: #003459;
            font-weight: 600;
        }

        .btn-gold {
            background: #003459;
            color: rgba(255, 252, 240);
            font-weight: bold;
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            transition: 0.3s;
        }

            .btn-gold:hover {
                background: #003459;
                color: rgba(255, 252, 240);
                box-shadow: 0 0 15px #003459;
            }

        .footer-text {
            text-align: center;
            margin-top: 20px;
            color: #919092;
        }

            .footer-text a {
                color: #003459;
                font-weight: 600;
            }
    </style>

</head>
<body>

    <div class="login-card">
        <div class="brand">
            <img src="/images/ex-photo.png" alt="logo" />
        </div>

        <h3 class="login-title">ExploreVia Login</h3>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label>Email Address</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-gold mt-3">Login</button>

            <div class="footer-text">
                Donâ€™t have an account?
                <a href="/Account/Register">Create One</a>
            </div>
            <div class="footer-text">
                Are you a hotel owner ?
                <a href="/Account/Register">Register Here!</a>
                @* /*redirect to upload hotel documents change url to /account/registerhotel page */ *@
            </div>
        </form>

    </div>

</body>
</html>
