@model Explorevia.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.FullWidth = true;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<style>
    #toast-container {
        top: 30px;
        right: 30px;
        z-index: 9999;
    }

        #toast-container .toast {
            border-radius: 12px ;
            padding: 15px 20px ;
            font-family: 'Segoe UI', sans-serif;
            font-weight: 600;
            font-size: 16px ;
            box-shadow: 0 4px 15px rgba(0,0,0,0.25) ;
            opacity: 0.95 ;
        }

        /* Success */
        #toast-container .toast-success {
            background-color: #003459 ; /* deep blue */
            color: #fffcf0 ; /* light cream/gold text */
            border-left: 5px solid #ffb703 ; /* gold accent */
        }

        /* Warning */
        #toast-container .toast-warning {
            background-color: #ffb703; /* gold */
            color: #003459 ; /* deep blue text */
            border-left: 5px solid #003459 ; /* deep blue accent */
        }

        /* Error */
        #toast-container .toast-error {
            background-color: #d62828 ; /* red */
           
            border-left: 5px solid #8b0000 ; /* dark red accent */
        }

        /* Info */
        #toast-container .toast-info {
            background-color: #0077cc ; /* light blue */
            border-left: 5px solid #005fa3 ; /* darker blue accent */
        }

        /* Close button styling */
        #toast-container .toast .toast-close-button {
          
            opacity: 0.9;
        }

        /* Progress bar */
        #toast-container .toast-progress {
            height: 4px;
           
            border-radius: 2px ;
        }
        /* Move Toastr triangle/icon to the left without overlapping text */
        #toast-container .toast .toast-message:before {
            left: 10px !important; /* move it 10px from left */
            top: 50% !important; /* vertically center */
            transform: translateY(-50%) !important;
        }

        #toast-container .toast .toast-message {
            padding-left: 25px !important; /* space for the icon */
        }

    body {
        background: url('/images/bg2.webp') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
        width: 400px;
        background: rgba(255, 252, 240, 0.7);
        border-radius: 20px;
        padding: 35px;
        margin: 80px auto;
        box-shadow: 0 0 20px #003459;
        border: 1px solid #003459;
    }

    .brand img {
        width: 195px;
        height: 95px;
        border: 3px solid #003459;
        box-shadow: 0 0 15px #003459;
        display: block;
        margin: 0 auto 15px;
    }

    .login-title {
        text-align: center;
        font-size: 28px;
        color: #003459;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .form-control {
        background: rgba(255, 252, 240, 0.7);
        border: 2px solid #444;
    }

        .form-control:focus {
            border-color: #003459;
            box-shadow: 0 0 5px #003459;
        }

    label {
        color: #003459;
        font-weight: 600;
    }

    .btn-gold {
        background: #003459;
        color: rgba(255, 252, 240);
        font-weight: bold;
        width: 100%;
        padding: 12px;
        border-radius: 8px;
    }

        .btn-gold:hover {
            box-shadow: 0 0 15px #003459;
        }

    .footer-text {
        text-align: center;
        margin-top: 20px;
        color: #919092;
    }

        .footer-text a {
            color: #003459;
            font-weight: 600;
        }


</style>

<div class="d-flex mt-5 justify-content-center align-items-center" style="min-height:80vh;">
    <div class="login-card">
        <div class="brand">
            <img src="/images/ex-photo.png" alt="logo" />
        </div>

        <h3 class="login-title">ExploreVia Login</h3>

        <form id="loginForm" method="post">
            <div class="form-group mb-3">
                <label>Email Address</label>
                <input type="email" name="Email" class="form-control" required />
                <span class="text-danger" id="emailError"></span>
            </div>

            <div class="form-group mb-3">
                <label>Password</label>
                <input type="password" name="Password" class="form-control" required minlength="6" />
                <span class="text-danger" id="passwordError"></span>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" name="RememberMe" id="RememberMe" />
                <label class="form-check-label" for="RememberMe">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-gold mt-3">Login</button>

            <div class="footer-text">
                Donâ€™t have an account?
                <a href="/Account/RegisterUser">Create One</a>
            </div>

            <div class="footer-text">
                Are you a hotel owner?
                <a href="/Hotels/UploadDocs">Register Here!</a>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function(){

        $('#loginForm').submit(function(e){
            e.preventDefault();

            let email = $('input[name="Email"]').val().trim();
            let password = $('input[name="Password"]').val().trim();
            let valid = true;

            if(email === ""){
                $('#emailError').text("Email is required");
                valid = false;
            } else {
                $('#emailError').text("");
            }

            if(password === ""){
                $('#passwordError').text("Password is required");
                valid = false;
            } else if(password.length < 6){
                $('#passwordError').text("Password must be at least 6 characters");
                valid = false;
            } else {
                $('#passwordError').text("");
            }

            if(!valid) return;

            // Submit form via AJAX
            $.ajax({
                url: '@Url.Action("Login", "Account")',
                type: 'POST',
                data: $(this).serialize(),
                success: function(response){
                    if(response.success){
                        // Redirect on successful login
                        window.location.href = response.redirectUrl;
                    } else {
                        // Show Toastr notification for errors
                        toastr.warning(response.message, "Login Failed");
                    }
                },
                error: function(){
                    toastr.error("Something went wrong. Please try again.", "Error");
                }
            });
        });

    });
</script>
