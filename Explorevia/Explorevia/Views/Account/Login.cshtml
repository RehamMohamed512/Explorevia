
@{
    Layout = "_Layout";
}
@model Explorevia.ViewModels.LoginViewModel

@if (TempData["NotificationMessage"] != null)
{
    <div class="alert alert-@TempData["NotificationType"]">
        @TempData["NotificationMessage"]
    </div>
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>ExploreVia | Login</title>

    <link rel="stylesheet" href="/" />

    <style>
        body {
            /* Full-page background image */
            background: url('/images/test.png') no-repeat center center;
            background-size: cover;
            height: 100vh;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 400px;
            background: rgba(255, 252, 240, 0.7);
            border-radius: 20px;
            padding: 35px;
            box-shadow: 0 0 20px #003459;
            color: #fff;
            border: 1px solid #003459;
        }

        .brand img {
            width: 195px;
            height: 95px;
            border: 3px solid #003459;
            box-shadow: 0 0 15px #003459;
            display: block;
            margin: 0 auto 15px;
        }

        .login-title {
            text-align: center;
            font-size: 28px;
            color: #003459;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .form-control {
            background: rgba(255, 252, 240, 0.7);
            border: 2px solid #444;
            color: black;
        }

        .form-control:focus {
            border-color: #003459;
            box-shadow: 0 0 5px #003459;
            background: rgba(255, 252, 240, 0.7);
            color: black;
        }

        label {
            color: #003459;
            font-weight: 600;
        }

        .btn-gold {
            background: #003459;
            color: rgba(255, 252, 240);
            font-weight: bold;
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .btn-gold:hover {
            background: #003459;
            color: rgba(255, 252, 240);
            box-shadow: 0 0 15px #003459;
        }

        .footer-text {
            text-align: center;
            margin-top: 20px;
            color: #919092;
        }

        .footer-text a {
            color: #003459;
            font-weight: 600;
        }
    </style>

</head>
<body>

    <div class="login-card">
        <div class="brand">
            <img src="/images/ex-photo.png" alt="logo" />
        </div>

        <h3 class="login-title">ExploreVia Login</h3>

        <form asp-action="Login" asp-controller="Account" method="post">

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label" style="color:#003459;"></label>
            </div>

            <button type="submit" class="btn btn-gold mt-3">Login</button>

            <div class="footer-text">
                Donâ€™t have an account?
                <a href="/Account/RegisterUser">Create One</a>
            </div>

            <div class="footer-text">
                Are you a hotel owner?
                <a href="/Account/RegisterHotel">Register Here</a>
            </div>

        </form>

    </div>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>
</html>
