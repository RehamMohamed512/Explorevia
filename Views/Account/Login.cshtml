@model Explorevia.ViewModels.LoginViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.FullWidth = true;
}
<style>
    body {
        background: url('/images/bg2.webp') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
        width: 400px;
        background: rgba(255, 252, 240, 0.7);
        border-radius: 20px;
        padding: 35px;
        margin: 80px auto; /* centers card under navbar */
        box-shadow: 0 0 20px #003459;
        border: 1px solid #003459;
    }

    .brand img {
        width: 195px;
        height: 95px;
        border: 3px solid #003459;
        box-shadow: 0 0 15px #003459;
        display: block;
        margin: 0 auto 15px;
    }

    .login-title {
        text-align: center;
        font-size: 28px;
        color: #003459;
        margin-bottom: 25px;
        letter-spacing: 1px;
    }

    .form-control {
        background: rgba(255, 252, 240, 0.7);
        border: 2px solid #444;
    }

        .form-control:focus {
            border-color: #003459;
            box-shadow: 0 0 5px #003459;
        }

    label {
        color: #003459;
        font-weight: 600;
    }

    .btn-gold {
        background: #003459;
        color: rgba(255, 252, 240);
        font-weight: bold;
        width: 100%;
        padding: 12px;
        border-radius: 8px;
    }

        .btn-gold:hover {
            box-shadow: 0 0 15px #003459;
        }

    .footer-text {
        text-align: center;
        margin-top: 20px;
        color: #919092;
    }

        .footer-text a {
            color: #003459;
            font-weight: 600;
        }
</style>

<div class="d-flex mt-5 justify-content-center align-items-center" style="min-height:80vh;">
    <div class="login-card">
        <div class="brand">
            <img src="/images/ex-photo.png" alt="logo" />
        </div>

        <h3 class="login-title">ExploreVia Login</h3>

        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label>Email Address</label>
                <input type="email" asp-for="Email" name="Email" class="form-control" required />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" name="Password" class="form-control" required />
            </div>

            <div class="form-group form-check mt-2">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>


            <button type="submit" class="btn btn-gold mt-3">Login</button>

            <div class="footer-text">
                Donâ€™t have an account?
                <a href="/Account/RegisterUser">Create One</a>
            </div>

            <div class="footer-text">
                Are you a hotel owner ?
                <a href="/Account/RegisterHotel">Register Here!</a>
            </div>
        </form>
    </div>
</div>
