
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #fffcf0;
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        border-left: 10px solid #003459;
    }

    .profile-img {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #003459;
    }

    .username {
        color: #003459;
        font-weight: 700;
        font-size: 1.6rem;
    }

    .btn-main {
        background-color: #003459;
        color: #fffcf0;
        border-radius: 10px;
        padding: 8px 20px;
        font-weight: 600;
    }

        .btn-main:hover {
            background-color: #00253d;
        }

    .table thead {
        background-color: #003459;
        color: #fffcf0;
    }

    .section-title {
        color: #003459;
        font-weight: 700;
        margin-top: 40px;
    }
</style>

<div class="container mt-5 mb-5">

    <div class="row">
        <!-- Left Profile Section -->
        <div class="col-md-4">
            <div class="profile-card text-center">

                <!-- Photo -->
                <img src="~/images/default-user.png" class="profile-img" id="profilePreview">

                <!-- Upload -->
                <form method="post" enctype="multipart/form-data" class="mt-3">
                    <input type="file" name="UserImage" accept="image/*" class="form-control" onchange="previewImage(event)">
                    <button class="btn btn-main mt-3 w-100">Upload</button>
                </form>

                <div class="username mt-3">@ViewBag.UserName</div>

                <div class="mt-4 d-grid gap-2">
                    <a href="#" class="btn btn-main">Edit Profile</a>
                    <a href="#" class="btn btn-warning text-dark">Change Password</a>
                    <a href="#" class="btn btn-danger">Delete Account</a>
                    <a href="/Account/Logout" class="btn btn-secondary">Logout</a>
                </div>
            </div>
        </div>

        <!-- Right Section: History -->
        <div class="col-md-8">

            <h3 class="section-title">Booking History</h3>

            <!-- Filters -->
            <div class="card p-3 mb-3" style="border-left:5px solid #003459;">
                <form class="row g-3">

                    <div class="col-md-4">
                        <label>Status</label>
                        <select class="form-control">
                            <option>All</option>
                            <option>Confirmed</option>
                            <option>Pending</option>
                            <option>Cancelled</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>From Date</label>
                        <input type="date" class="form-control">
                    </div>

                    <div class="col-md-4">
                        <label>To Date</label>
                        <input type="date" class="form-control">
                    </div>

                    <div class="col-12 text-end">
                        <button class="btn btn-main">Filter</button>
                    </div>
                </form>
            </div>

            <!-- History Table -->
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Hotel Name</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @* Example Static Rows *@
                    <tr>
                        <td>00123</td>
                        <td>Cairo Grand Hotel</td>
                        <td>2025-02-10</td>
                        <td>Confirmed</td>
                        <td><button class="btn btn-sm btn-main">View</button></td>
                    </tr>

                    <tr>
                        <td>00456</td>
                        <td>Luxor Nile Resort</td>
                        <td>2025-01-28</td>
                        <td>Cancelled</td>
                        <td><button class="btn btn-sm btn-main">View</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const img = document.getElementById("profilePreview");
        img.src = URL.createObjectURL(event.target.files[0]);
    }
</script>

